{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "petland/latest-posts",
  "version": "0.1.0",
  "title": "Latest Posts (Petland)",
  "category": "widgets",
  "icon": "admin-post",
  "description": "Displays recent blog posts with clickable images and Petland styling.",
  "supports": {
    "html": false,
    "align": true,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "background": true,
      "text": true
    }
  },
  "attributes": {
    "postsToShow": { "type": "number", "default": 6 }
  },
  "example": {},
  "textdomain": "petlandtextdomain",
  "editorScript": "file:./dist/script.js",
  "style": "file:./dist/style.css",
  "editorStyle": "file:./dist/style.css",
  "render": "file:./render.php"
}
